@model Category

@if (ViewBag.CategoryExist !=null)
{
    <div class="col-lg-6 m-auto mb-5">
        <div class="alert alert-danger shadow" role="alert">
            @ViewBag.CategoryExist
        </div>
    </div>
}

<div class="col-lg-6 m-auto">
    <div class="card-body shadow mb-4" >
        <form method="post">
            <div class="form-group">
                <label for="category">Category Name</label>
                <input id="category" class="form-control" type="text" name="Name" />
                
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success btn-sm"  type="submit" name="Submit" />
            </div>
        </form>
    </div>
</div>
